apiVersion: run.tanzu.vmware.com/v1alpha2
kind: TanzuKubernetesCluster
metadata:
  name: tap-cluster
  namespace: production
spec:
  topology:
    controlPlane:
      replicas: 1
      vmClass: guaranteed-medium
      storageClass: dc1-cls1-datastore
      volumes:
        - name: etcd
          mountPath: /var/lib/etcd
          capacity:
            storage: 16Gi
      tkr:
        reference:
          name: v1.20.12---vmware.1-tkg.1.b9a42f3
    nodePools:
    - name: worker-nodepool-vsphere
      replicas: 1
      vmClass: guaranteed-large
      storageClass: dc1-cls1-datastore
      volumes:
        - name: containerd
          mountPath: /var/lib/containerd
          capacity:
            storage: 64Gi
      tkr:
        reference:
          name: v1.20.12---vmware.1-tkg.1.b9a42f3
  settings:
    storage:
      defaultClass: dc1-cls1-datastore
    network:
      cni:
        name: antrea
---
